{% extends 'layout.html.twig' %}
{% block title %} Todo {% endblock %}
{% block body %}
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
        {% for todoName, todoContent in app.session.get('todos') %}
            <tr
                    class="
                {% if loop.index is odd %}
                    table-danger
                {% else %}
                    table-warning
                {% endif %}
            "
            >
                <td>{{ todoName }}</td>
                <td>{{ todoContent }}</td>
                <td><a href="{{ path('app_todo_delete', {name: todoName}) }}" class="btn btn-danger">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}